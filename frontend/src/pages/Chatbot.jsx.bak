
import React, { useState, useEffect, useRef } from "react";
import axios from "axios";

const Chatbot = () => {
  const [messages, setMessages] = useState([]);
  const [input, setInput] = useState("");
  const fileInputRef = useRef(null);
  const videoRef = useRef(null);

  const sendMessage = async () => {
    if (!input.trim()) return;
    const userMessage = { role: "user", content: input };
    setMessages((prev) => [...prev, userMessage]);
    setInput("");

    try {
      const res = await axios.post("http://localhost:5050/api/ai/ask", {
        prompt: userMessage.content,
      });
      const aiReply = { role: "assistant", content: res.data.reply };
      setMessages((prev) => [...prev, aiReply]);
    } catch (error) {
      console.error("API error:", error);
    }
  };

  const handleQuickAction = (prompt) => {
    setInput(prompt);
    sendMessage();
  };

  const handleFileUpload = async (e) => {
    const file = e.target.files[0];
    if (!file) return;

    const formData = new FormData();
    formData.append("file", file);

    try {
      const res = await axios.post("http://localhost:5050/api/ai/upload", formData);
      const aiReply = { role: "assistant", content: res.data.reply };
      setMessages((prev) => [...prev, aiReply]);
    } catch (error) {
      console.error("File upload error:", error);
    }
  };

  const activateCamera = async () => {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({ video: true });
      videoRef.current.srcObject = stream;
      videoRef.current.play();
    } catch (error) {
      console.error("Camera access error:", error);
    }
  };

  return (
    <div className="chatbot">
      <div className="chat-window">
        {messages.map((msg, index) => (
          <div key={index} className={`message ${msg.role}`}>
            <p>{msg.content}</p>
          </div>
        ))}
      </div>

      <div className="quick-actions">
        <button onClick={() => handleQuickAction("What are the common symptoms of diabetes?")}>Diabetes Symptoms</button>
        <button onClick={() => handleQuickAction("What are effective treatments for migraines?")}>Migraine Treatment</button>
        <button onClick={() => handleQuickAction("How to interpret my blood test results?")}>Blood Test Analysis</button>
      </div>

      <div className="input-area">
        <input
          type="text"
          value={input}
          onChange={(e) => setInput(e.target.value)}
          placeholder="Describe your symptoms..."
        />
        <button onClick={sendMessage}>Send</button>
        <button onClick={() => fileInputRef.current.click()}>ðŸ“Ž Upload File</button>
        <button onClick={activateCamera}>ðŸ“· Camera</button>
        <input
          type="file"
          style={{ display: "none" }}
          ref={fileInputRef}
          onChange={handleFileUpload}
        />
      </div>

      <video ref={videoRef} width="320" height="240" style={{ marginTop: "10px" }} />
    </div>
  );
};

export default Chatbot;
